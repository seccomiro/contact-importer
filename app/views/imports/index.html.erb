<% content_for :title do %>
  Imports
<% end %>

<div class="page-header">
  <h1>Imports</h1>
  <%= link_to new_import_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    New Import
  <% end %>
</div>

<div class="imports table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>File</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @imports.each do |import| %>
        <tr>
          <td>
            <%= link_to url_for(import.file).split('/').last, url_for(import.file) %>
          </td>
          <td><%= import.status.to_s.humanize %></td>
          <td>
            <%= link_to import, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
