
<%= simple_form_for @import do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :enforce_import, input_html: { value: '' }, as: :hidden %>
  <div class="form-inputs">
    <%= f.input :file, as: :file, required: true, input_html: { accept:".csv" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Create Import' : 'Update Import', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
